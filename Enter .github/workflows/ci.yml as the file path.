name: CI

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Set up Go
        uses: actions/setup-go@v2
        with:
          go-version: "1.20"

      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Build and Test
        run: |
          # Add commands to build and test your Go application here

